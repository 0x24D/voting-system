{
  "env": {
    "mocha": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-unused-vars": [ "error", {
      "varsIgnorePattern": "assert|should|expect"
      }
    ],
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}
